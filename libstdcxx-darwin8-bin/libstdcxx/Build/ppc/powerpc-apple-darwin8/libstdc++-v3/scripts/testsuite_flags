#!/bin/sh

#
# This script computes the various flags needed to run GNU C++ testsuites
# (compiler specific as well as library specific). 
#
# Written by Benjamin Kosnik <bkoz@redhat.com>
#            Gabriel Dos Reis <gdr@codesourcery.com>
#

# Print a message saying how this script is intended to be invoked
print_usage() {
    cat <<EOF
Usage: 
    testsuite_flags --install-includes
		    --build-includes
		    --build-cxx
		    --install-cxx
		    --cxxflags
		    --cxxpchflags
		    --cxxldflags
EOF
}

# Establish configure-generated directory structure.
BUILD_DIR=/private/tmp/libstdcxx/Build/ppc/powerpc-apple-darwin8/libstdc++-v3
SRC_DIR=/tmp/libstdcxx/Sources/libstdcxx/libstdc++-v3
PREFIX_DIR=/usr
query=$1

case ${query} in
    --install-includes)
      INCLUDES="-I${SRC_DIR}/testsuite/util"
      echo ${INCLUDES}
      ;;
    --build-includes)
      INCLUDES="-nostdinc++ -I/private/tmp/libstdcxx/Build/ppc/powerpc-apple-darwin8/libstdc++-v3/include/powerpc-apple-darwin8 -I/private/tmp/libstdcxx/Build/ppc/powerpc-apple-darwin8/libstdc++-v3/include -I/tmp/libstdcxx/Sources/libstdcxx/libstdc++-v3/libsupc++ 
                -I${SRC_DIR}/include/backward -I${SRC_DIR}/testsuite/util"
      echo ${INCLUDES}
      ;;
    --install-cxx)
      CXX=${PREFIX_DIR}/bin/g++
      echo ${CXX}
      ;;
    --build-cxx)
      CXX_build=" /usr/bin/gcc-4.2  -arch ppc -shared-libgcc -nostdinc++ -B/usr/powerpc-apple-darwin8/bin/ -B/usr/powerpc-apple-darwin8/lib/ -isystem /usr/powerpc-apple-darwin8/include -isystem /usr/powerpc-apple-darwin8/sys-include"
      CXX=`echo "$CXX_build" | sed 's,gcc/xgcc ,gcc/g++ ,'`
      echo ${CXX}
      ;;
    --cxxflags)
      CXXFLAGS_save="-g -O2 -D_GLIBCXX_ASSERT"
      CXXFLAGS_config='-ffunction-sections -fdata-sections -fmessage-length=0 
 		      -g -Os -pipe    '
      echo ${CXXFLAGS_save} ${CXXFLAGS_config}
      ;;
    --cxxpchflags)
      PCHFLAGS="-include bits/stdtr1c++.h"
      echo ${PCHFLAGS}
      ;;
    --cxxldflags)
      SECTIONLDFLAGS=""
      echo ${SECTIONLDFLAGS}
      ;;
    *)
      print_usage
      ;;
esac

exit 0
